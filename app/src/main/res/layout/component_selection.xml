        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Style.App.CornerSize50Percent"
        tools:src="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>